{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Saml2": {
    "Issuer": "https://localhost:5001/sp1",
    "AllowedIssuer": "your-Idp-Issuer-URL",
    "SingleSignOnDestination": "your-IdP-SSO-URL",
    "SingleLogoutDestination": "your-IdP-SLO-URL",
