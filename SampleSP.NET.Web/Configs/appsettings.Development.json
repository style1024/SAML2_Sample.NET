    "SignatureAlgorithm": "http://www.w3.org/2001/04/xmldsig-more#rsa-sha256",
    "IdPCertificate": "your-IdPCertificate-base64",
    "SigningCertificate": "your-SigningCertificate-base64"
  }
}
